# Makefile - Commandes pratiques
.PHONY: format lint type-check test quality install

# Installation des dÃ©pendances
install:
	pip install -e .
	pip install black isort ruff mypy pytest pre-commit
	pre-commit install

# Formatage du code
format:
	@echo "ğŸ¨ Formatage avec Black..."
	black .
	@echo "ğŸ“¦ Tri des imports avec isort..."
	isort .

# Linting
lint:
	@echo "ğŸ” Analyse avec Ruff..."
	ruff check . --fix

# VÃ©rification de types
type-check:
	@echo "ğŸ” VÃ©rification des types avec mypy..."
	mypy .

# Tests
test:
	@echo "ğŸ§ª ExÃ©cution des tests..."
	pytest

# VÃ©rification complÃ¨te de la qualitÃ©
quality: format lint type-check
	@echo "âœ… VÃ©rification de la qualitÃ© terminÃ©e!"

# VÃ©rification avant commit (sans modification)
check:
	@echo "ğŸ” VÃ©rification sans modification..."
	black --check .
	isort --check-only .
	ruff check .
	mypy .

# Nettoyage
clean:
	find . -type d -name __pycache__ -delete
	find . -type f -name "*.pyc" -delete
	find . -type d -name "*.egg-info" -exec rm -rf {} +